<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="Шоколадний фондан" />

        <!-- Зображення -->
        <ImageView
            android:id="@+id/fondantImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fondant" />

        <!-- Текст рецепту -->
        <TextView
            android:id="@+id/fondantIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Інгредієнти:" />

        <TextView
            android:id="@+id/fondantIngredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="• 200 г шоколаду;\n• 100 г масла;\n• 2 яйця;\n• 2 жовтки;\n• 50 г цукру;\n• 50 г борошна." />

        <TextView
            android:id="@+id/fondantDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Опис:" />

        <TextView
            android:id="@+id/fondantSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="1) Розтопіть шоколад і масло на водяній бані;\n2) Змішайте яйця, жовтки та цукор;\n3) Додайте борошно і розтоплений шоколад, ретельно перемішайте;\n4) Залийте тісто у форми, запікайте 8-10 хвилин при 200°C;\n5) Подавайте гарячим." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Додати в обрані"
            android:backgroundTint="#FBCEB1"
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:layout_margin="8dp"
            app:cornerRadius="16dp" />
    </LinearLayout>
</ScrollView>
